# =============================================================================
# CellarSessions Environment Configuration
# =============================================================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# DO NOT commit the actual .env file to version control

# Environment
EXPO_PUBLIC_ENV=development

# =============================================================================
# SUPABASE CONFIGURATION (REQUIRED)
# =============================================================================
# Your Supabase project URL - find this in your Supabase dashboard
EXPO_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Your Supabase anon/public key - safe to use in client-side code
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Your Supabase service role key - used for admin operations (optional)
# WARNING: Keep this secure, never expose in client-side code
EXPO_PUBLIC_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================
# Supabase Storage buckets (will be created automatically if they don't exist)
EXPO_PUBLIC_STORAGE_WINE_PHOTOS_BUCKET=wine-photos
EXPO_PUBLIC_STORAGE_VOICE_NOTES_BUCKET=voice-notes
EXPO_PUBLIC_STORAGE_AVATARS_BUCKET=avatars

# File upload limits (in MB)
EXPO_PUBLIC_MAX_FILE_SIZE_PHOTOS=10
EXPO_PUBLIC_MAX_FILE_SIZE_VOICE=25
EXPO_PUBLIC_MAX_FILE_SIZE_AVATARS=5

# =============================================================================
# AI SERVICES (OPTIONAL)
# =============================================================================
# Google Vision API for wine label recognition
# Get your API key from: https://console.cloud.google.com/apis/credentials
EXPO_PUBLIC_GOOGLE_VISION_API_KEY=your-google-vision-api-key-here

# OpenAI API for voice transcription and wine recommendations
# Get your API key from: https://platform.openai.com/api-keys
EXPO_PUBLIC_OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# APP CONFIGURATION
# =============================================================================
# App-specific settings
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_API_TIMEOUT=30000
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=false

# Feature flags
EXPO_PUBLIC_ENABLE_VOICE_NOTES=true
EXPO_PUBLIC_ENABLE_CAMERA_FEATURES=true
EXPO_PUBLIC_ENABLE_LOCATION_FEATURES=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development-only settings (not used in production)
EXPO_PUBLIC_ENABLE_DEV_TOOLS=true
EXPO_PUBLIC_LOG_LEVEL=info
EXPO_PUBLIC_MOCK_API_CALLS=false

# =============================================================================
# SOCIAL FEATURES
# =============================================================================
# Limits for social features
EXPO_PUBLIC_MAX_SQUAD_MEMBERS=50
EXPO_PUBLIC_MAX_SQUADS_PER_USER=10
EXPO_PUBLIC_MAX_TASTING_NOTES_PER_DAY=20

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Session and security settings
EXPO_PUBLIC_SESSION_TIMEOUT_MINUTES=720
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_REQUIRE_EMAIL_VERIFICATION=true

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Performance and caching settings
EXPO_PUBLIC_CACHE_TTL_MINUTES=5
EXPO_PUBLIC_IMAGE_QUALITY=0.8
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true

# =============================================================================
# SETUP INSTRUCTIONS
# =============================================================================
# 1. Copy this file to .env in the same directory
# 2. Update EXPO_PUBLIC_SUPABASE_URL with your Supabase project URL
# 3. Update EXPO_PUBLIC_SUPABASE_ANON_KEY with your Supabase anon key
# 4. (Optional) Add your API keys for AI features
# 5. Run: npm run type-check to validate your setup
# 6. Run: npm start to start the development server
#
# For production deployment:
# - Set EXPO_PUBLIC_ENV=production
# - Ensure all required environment variables are set
# - Never expose service role keys in client-side code